<Window x:Class="stu_profo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stu_profo"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1400"
        WindowStyle="None"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{x:Null}">
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="10" BorderThickness="1">
            <Border.Background>
                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="#1a4e96" Offset="0.0"/>
                    <GradientStop Color="#164381" Offset="0.7"/>
                    <GradientStop Color="#0C3771" Offset="1.0"/>
                </RadialGradientBrush>
            </Border.Background>
            
        </Border>
        <Button Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Click="CloseButton_Click" BorderBrush="#FF707070" Background="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="30" Height="30" Background="white" CornerRadius="15">
                        <TextBlock Text="X" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="black"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Grid x:Name="loadingScreen" Margin="37,36,25,24" Visibility="Visible">


            <Button x:Name="contBtn" Margin="607,451,619,236" Click="cont" RenderTransformOrigin="0.5,0.5" Background="Transparent" BorderThickness="0" Panel.ZIndex="3">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Border CornerRadius="25" BorderThickness="0">
                    <!-- Adjust the CornerRadius to match your image dimensions -->
                    <Image Source="/View/button.png" Stretch="Uniform" Width="72" Height="73"/>
                </Border>
            </Button>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="194" Width="314">
                <TextBlock Text="NIBM" Foreground="White" FontSize="67" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="0,0,0,10" FontFamily="Barlow">
                    <TextBlock.RenderTransform>
                        <SkewTransform AngleX="-5"/>
                        <!-- Adjust the AngleX value to control the slant angle -->
                    </TextBlock.RenderTransform>
                </TextBlock>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Student Profo" Foreground="White" FontSize="40" FontWeight="Thin" FontFamily="Barlow" Width="243"/>
                    <Border Background="White" CornerRadius="10" Padding="5,0,5,0" Margin="5,0,0,0" Width="60" Height="29">
                        <TextBlock Text="PRO" Foreground="#164381" FontSize="20" FontWeight="DemiBold" HorizontalAlignment="Center" FontFamily="Fonts/#YourCustomFontName" Height="26" Margin="0,3,0,-3"/>
                    </Border>
                </StackPanel>

            </StackPanel>
            <Label x:Name="statusLabel" Content="" HorizontalAlignment="Center" Margin="0,754,0,0" VerticalAlignment="Top" Foreground="White" Panel.ZIndex="0"/>
        </Grid>



        <Grid x:Name="signupScreen" Margin="32,50,30,40" Visibility="Hidden">
            <Border Margin="246,54,244,50" BorderBrush="White" BorderThickness="2" CornerRadius="10">
                <Grid Margin="20,40,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="170*"/>
                        <RowDefinition Height="99*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Side Image -->
                    <Image Source="/View/SignupImage.png" Stretch="UniformToFill" Grid.Column="0" Margin="10,-16,392,10" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

                    <!-- Right Side Form -->
                    <Border Background="White" CornerRadius="0,10,10,0" Grid.RowSpan="2" Margin="10,-16,10,10" Grid.Column="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="236" Margin="75,187,0,0">
                            <StackPanel Margin="0,0,0,20" HorizontalAlignment="Left">

                            </StackPanel>
                            <TextBlock Text="SIGN IN" FontFamily="Barlow" FontSize="24" FontWeight="Bold" Width="94" HorizontalAlignment="Left" Height="33"/>

                            <!-- Email -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Email" Foreground="Gray" Margin="0,0,0,5" Width="231"/>
                                <Border x:Name="f" Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Height="30" Width="231">
                                    <TextBox x:Name="emailInput" Margin="5,0" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" TextChanged="EmailTextBox_TextChanged"/>
                                </Border>
                            </StackPanel>

                            <!-- Password -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Password" Foreground="Gray" Margin="0,0,0,5" Width="229"/>
                                <Border Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Height="30" Width="230">
                                    <TextBox x:Name="passwordInput" Margin="5,0" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" />
                                </Border>
                            </StackPanel>

                            <TextBlock Text="Forgot password?" HorizontalAlignment="Left" Foreground="Gray" Margin="0,0,0,10" />

                            <TextBlock HorizontalAlignment="Left" Margin="0,0,0,10" FontFamily="Barlow">
    <Run Text="Don't have an account? " Foreground="Gray" />
    <Run Text="Click here to register" Foreground="Black" FontWeight="Bold"/>
                            </TextBlock>

                            <Button x:Name="loginBtn" Cursor="Hand" Content="Login" Background="#0F458D" Foreground="White" Height="40" Margin="0,20,0,10" Click="Login">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                    <Image Grid.Column="1" Margin="85,118,259,196" Source="/View/signuphead.png" Stretch="Fill"/>

                </Grid>
            </Border>
        </Grid>




        <Grid x:Name="desktop3" Background="#0C3771" Margin="32,50,30,10" Visibility="Hidden">


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="10" Background="#F5F5F5" CornerRadius="10">
                <StackPanel>
                    <!-- User Info Section -->
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Ellipse Width="50" Height="50" Fill="LightGray"/>
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="DSE231F/CO" FontSize="12" FontWeight="Bold"/>
                            <TextBlock Text="CODSE231F-055" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Course List Section -->
                    <ListBox Margin="10" BorderThickness="0">
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                        <!-- Repeat ListBoxItem for other courses -->
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                        <!-- Add more ListBoxItems as needed -->
                    </ListBox>
                </StackPanel>
            </Border>


            <Border Grid.Column="1" Margin="10" Background="#FFFFFF" CornerRadius="10">
                <StackPanel>
                    <!-- Top Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                        <Button Content="🔔" Width="30" Height="30" Margin="5"/>
                        <Button Content="⚙" Width="30" Height="30" Margin="5"/>
                    </StackPanel>

                    <!-- Search Fields -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0">
                        <TextBox Width="200" Height="20" Margin="0,0,10,0">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Text" Value="Programme"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="Text" Value=""/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBox Width="200" Height="20" Margin="0,0,10,0">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Text" Value="Batch"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="Text" Value=""/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Content="🔍" Width="20" Height="20" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Programme Info -->
                    <Grid Background="#F0F4F8" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="40" Height="40" Fill="LightGray"/>
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Diploma in Software Engineering" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="DSE231F/CO CODSE231F-055" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                            <Button Content="Select" Width="60" Height="20" Margin="0,0,0,10"/>
                            <Button Content="Remove" Width="60" Height="20"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

            </Border>



        </Grid>

        <Grid x:Name="mainpage" Background="#0C3771" Margin="32,50,30,10" Visibility="Hidden">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="10,10,10,10" Background="#F5F5F5" CornerRadius="10">
                <StackPanel>
                    <!-- User Info Section -->
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Ellipse Width="50" Height="50" Fill="LightGray"/>
                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="DSE231F/CO" FontSize="12" FontWeight="Bold"/>
                            <TextBlock Text="CODSE231F-055" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                    <ListBox BorderThickness="0">
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                        <!-- Add more ListBoxItems as needed -->
                        <!-- Repeat ListBoxItem for other courses -->
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>

                    <!-- Course List Section -->
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="10,10,420,10" Background="#F5F5F5" CornerRadius="10">
                <StackPanel Margin="10">
                    <!-- Academic Progress -->
                    <Border Background="#3A7FD5" CornerRadius="10" Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="Academic" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                            <Grid>
                                <Ellipse Width="40" Height="40" Stroke="White" StrokeThickness="5"/>
                                <TextBlock Text="75%" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Skill Progress -->
                    <Border Background="#6FBF4D" CornerRadius="10" Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="Skill" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                            <Grid>
                                <Ellipse Width="40" Height="40" Stroke="White" StrokeThickness="5"/>
                                <TextBlock Text="25%" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Upcoming Update Text -->
                    <TextBlock Text="UPCOMING UPDATE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="20,10,20,0"/>
                </StackPanel>
            </Border>

            <!-- New Border Section -->
            <Border Grid.Column="1" VerticalAlignment="Center" Margin="402,0,28,0" Background="#F5F5F5" CornerRadius="10" Height="770">
                <StackPanel Margin="10" VerticalAlignment="Bottom">
                    <!-- NIBM Logo -->


                    <!-- Top Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                        <Button Content="🔔" Width="30" Height="30" Margin="5"/>
                        <Button Content="⚙" Width="30" Height="30" Margin="5"/>
                    </StackPanel>

                    <!-- Progress Indicators -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
                        <Border Background="#A0C4FF" CornerRadius="10" Width="100" Height="100" Margin="5">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="1" Foreground="White" FontWeight="Bold" FontSize="24"/>
                                <TextBlock Text="30%" Foreground="White" FontWeight="Bold" FontSize="24"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#3A7FD5" CornerRadius="10" Width="100" Height="100" Margin="5">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text=" " Foreground="White" FontWeight="Bold" FontSize="24"/>
                                <TextBlock Text="30%" Foreground="White" FontWeight="Bold" FontSize="24"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

        </Grid>

        <Grid x:Name="Blured">

        </Grid>

    </Grid>
</Window>
