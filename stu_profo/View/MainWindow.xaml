                        </StackPanel>
                    </Border>

                    <Image Source="/View/signuphead.png" Stretch="Fill" Margin="84,114,264,204" RenderTransformOrigin="0.315,0.373" Grid.Column="1" />
                </Grid>
            </Border>

        </Grid>

