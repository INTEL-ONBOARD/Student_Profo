<Window x:Class="stu_profo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stu_profo"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1400"
        WindowStyle="None" Loaded="callValidate">
    <Grid>
        <Border CornerRadius="10" BorderThickness="1" BorderBrush="Gray">
            <Border.Background>
                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="#194785" Offset="0.1"/>
                    <GradientStop Color="#0C3771" Offset="1"/>
                    <GradientStop Color="#0C3771" Offset="1"/>
                    <GradientStop Color="#164381" Offset="1"/>
                    <GradientStop Color="#0C3771" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>

           
        </Border>
        <Button Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Click="CloseButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="30" Height="30" Background="Gray" CornerRadius="15">
                        <TextBlock Text="X" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Grid x:Name="loadingScreen" Background="#0C3771" Margin="32,50,30,10" Visibility="Hidden">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="NIBM" Foreground="White" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" FontFamily="Fonts/#YourCustomFontName"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Student Profo" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Fonts/#YourCustomFontName"/>
                    <Border Background="White" CornerRadius="5" Padding="5,0,5,0" Margin="5,0,0,0">
                        <TextBlock Text="PRO" Foreground="Black" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Fonts/#YourCustomFontName"/>
                    </Border>
                </StackPanel>
                <TextBlock Text="loading" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" FontFamily="Fonts/#YourCustomFontName"/>
            </StackPanel>
        </Grid>
        
        <Grid x:Name="signupScreen" Background="#FFC7C7C7" Margin="32,50,30,10" Visibility="Hidden">


            <Grid Margin="20,40,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="170*"/>
                    <RowDefinition Height="99*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!-- Left Side Image -->
                <Border Background="White" CornerRadius="0,10,10,0" Grid.RowSpan="2" Margin="27,0,405,0" Grid.ColumnSpan="2"/>

                <!-- Right Side Form -->
                <Border Grid.Column="1" Background="White" CornerRadius="0,10,10,0" Grid.RowSpan="2" Margin="167,0,46,0" Height="788" VerticalAlignment="Top">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                        <StackPanel Margin="0,0,0,20" HorizontalAlignment="Left">
                            <Ellipse Width="50" Height="50" Fill="Gray"/>
                        </StackPanel>

                        <TextBlock Text="SIGN IN" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,20" />

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Email" Foreground="Gray" Margin="0,0,0,5"/>
                            <Border Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Height="30" Width="254">
                                <TextBox x:Name="EmailTextBox" Margin="5,0" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" TextChanged="EmailTextBox_TextChanged"/>
                            </Border>
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Password" Foreground="Gray" Margin="0,0,0,5"/>
                            <Border Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Height="30" Width="254">
                                <PasswordBox Name="PasswordBox" Margin="5,0" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" PasswordChanged="PasswordBox_PasswordChanged"/>
                            </Border>
                        </StackPanel>

                        <TextBlock Text="Forgot password?" HorizontalAlignment="Left" Foreground="Blue" Margin="0,0,0,10" />

                        <TextBlock Text="Don't have an account? " HorizontalAlignment="Left" />
                        <TextBlock Text="Click here to register" HorizontalAlignment="Left" Foreground="Blue" />
                        <Button Content="Login" Background="Blue" Foreground="White" Height="40" Margin="0,20,0,10" Click="Button_Click">


                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                      BorderBrush="{TemplateBinding BorderBrush}" 
                      BorderThickness="1" 
                      CornerRadius="5" 
                      Padding="10,0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>


                    </StackPanel>
                </Border>
            </Grid>

        </Grid>

        <Grid x:Name="desktop3" Background="#0C3771" Margin="32,50,30,10" Visibility="Visible">

            
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="10" Background="#F5F5F5" CornerRadius="10">
                    <StackPanel>
                        <!-- User Info Section -->
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Ellipse Width="50" Height="50" Fill="LightGray"/>
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="DSE231F/CO" FontSize="12" FontWeight="Bold"/>
                                <TextBlock Text="CODSE231F-055" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Course List Section -->
                        <ListBox Margin="10" BorderThickness="0">
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                                </StackPanel>
                            </ListBoxItem>
                            <!-- Repeat ListBoxItem for other courses -->
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="A+" Width="30" Height="30" Background="#3A7FD5" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="DSE231F/CO/Introduction to Computer Science"/>
                                </StackPanel>
                            </ListBoxItem>
                            <!-- Add more ListBoxItems as needed -->
                        </ListBox>
                    </StackPanel>
                </Border>


                <Border Grid.Column="1" Margin="10" Background="#FFFFFF" CornerRadius="10">
                    <StackPanel>
                        <!-- Top Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                            <Button Content="🔔" Width="30" Height="30" Margin="5"/>
                            <Button Content="⚙" Width="30" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Search Fields -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0">
                            <TextBox Width="200" Height="20" Margin="0,0,10,0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Text" Value="Programme"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Text" Value=""/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBox Width="200" Height="20" Margin="0,0,10,0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Text" Value="Batch"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Text" Value=""/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Content="🔍" Width="20" Height="20" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Programme Info -->
                        <Grid Background="#F0F4F8" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="40" Height="40" Fill="LightGray"/>
                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Diploma in Software Engineering" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="DSE231F/CO CODSE231F-055" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Button Content="Select" Width="60" Height="20" Margin="0,0,0,10"/>
                                <Button Content="Remove" Width="60" Height="20"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                </Border>

           

        </Grid>
    </Grid>
</Window>
