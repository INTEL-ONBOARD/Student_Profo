                </ControlTemplate>
            </Button.Template>
        </Button>

        <Grid x:Name="loadingScreen" Margin="37,36,25,24" Visibility="Visible">


            <Button x:Name="contBtn" Margin="607,451,619,236" Click="cont" RenderTransformOrigin="0.5,0.5" Background="Transparent" BorderThickness="0" Panel.ZIndex="3" Focusable="False">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="25" BorderThickness="0">
                                        <Image Source="/View/button.png" Stretch="Uniform" Width="72" Height="73"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="buttonScale" ScaleY="1" ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="buttonScale"
                         Storyboard.TargetProperty="ScaleX"
                         From="1" To="1.2"
                         Duration="0:0:0.2"
                         AutoReverse="True"/>
                                <DoubleAnimation Storyboard.TargetName="buttonScale"
                         Storyboard.TargetProperty="ScaleY"
                         From="1" To="1.2"
                         Duration="0:0:0.2"
                         AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="buttonScale"
                         Storyboard.TargetProperty="ScaleX"
                         From="1" To="0.8"
                         Duration="0:0:0.2"
                         AutoReverse="False"/>
                                <DoubleAnimation Storyboard.TargetName="buttonScale"
                         Storyboard.TargetProperty="ScaleY"
                         From="1" To="0.8"
                         Duration="0:0:0.2"
                         AutoReverse="False"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="buttonScale"
                         Storyboard.TargetProperty="ScaleX"
                         From="0.8" To="1"
                         Duration="0:0:0.2"
                         AutoReverse="False"/>
                                <DoubleAnimation Storyboard.TargetName="buttonScale"
                         Storyboard.TargetProperty="ScaleY"
                         From="0.8" To="1"
                         Duration="0:0:0.2"
                         AutoReverse="False"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>




