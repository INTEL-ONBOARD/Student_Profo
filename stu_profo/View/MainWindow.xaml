                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="loginButtonScale"
                                     Storyboard.TargetProperty="ScaleX"
                                     From="1" To="1.1"
                                     Duration="0:0:0.2"
                                     AutoReverse="True"/>
