        <Grid x:Name="studentview" Background="Transparent" Margin="32,50,30,10" Visibility="Hidden">

            <!-- Content here will use the specific background -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Image Source="/View/image 42.png" Stretch="Fill" Margin="63,42,179,690" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="3.27"/>
                        <RotateTransform/>
                        <TranslateTransform X="0.943"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Border Grid.Column="0" Margin="44,122,10,68" Background="#F5F5F5" CornerRadius="10">
                <StackPanel>
                    <!-- User Info Section -->
                    <StackPanel Orientation="Horizontal" Margin="10,30,10,10" Width="310" >
